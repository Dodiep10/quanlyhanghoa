<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edtNguoiNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Người nhập"
        android:text="Admin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn hàng hóa:"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvHangHoaDaChon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:hint="--- Bấm vào đây để chọn hàng hóa ---"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:background="#EEEEEE"
        android:drawableEnd="@android:drawable/ic_menu_search"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số lượng nhập:"/>

    <EditText
        android:id="@+id/edtSoLuongNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Nhập số lượng"/>

    <Button
        android:id="@+id/btnThemHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm hàng"
        android:layout_marginTop="8dp"
        android:backgroundTint="#4CAF50"/> <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Danh sách chi tiết:"
    android:textStyle="bold"
    android:paddingTop="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChiTietNhap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="4dp"/>

    <TextView
        android:id="@+id/tvTongTien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng tiền: 0đ"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp"/>

    <Button
        android:id="@+id/btnLuuPhieuNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lưu phiếu nhập"
        android:layout_marginTop="8dp"
        android:backgroundTint="#4CAF50"/> </LinearLayout>