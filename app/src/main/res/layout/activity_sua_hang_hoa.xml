<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CẬP NHẬT HÀNG HOÁ"
            android:textColor="#397485"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/imgSuaHinhAnh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E0E0E0"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="#80000000"
                android:padding="5dp"
                android:text="Chạm để đổi ảnh"
                android:textColor="#FFF"
                android:textSize="12sp" />
        </FrameLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên hàng hoá"
            android:layout_marginBottom="15dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtSuaTen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại hàng"
            android:textSize="12sp"
            android:textColor="#555"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/spnSuaLoai"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bg_search_rounded"
            android:paddingStart="10dp"
            android:layout_marginBottom="15dp"
            android:spinnerMode="dropdown"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Giá bán"
                android:layout_marginEnd="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtSuaGia"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Số lượng"
                android:layout_marginStart="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtSuaSoLuong"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin Nhà Cung Cấp"
            android:textStyle="bold"
            android:textColor="#397485"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/edtSuaTenNCC"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Tên Nhà Cung Cấp"
            android:background="@drawable/bg_search_rounded"
            android:padding="12dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/edtSuaEmailNCC"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email NCC"
            android:background="@drawable/bg_search_rounded"
            android:padding="12dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/edtSuaSdtNCC"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Số điện thoại NCC"
            android:inputType="phone"
            android:background="@drawable/bg_search_rounded"
            android:padding="12dp"
            android:layout_marginBottom="25dp"/>

        <Button
            android:id="@+id/btnLuuThayDoi"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="LƯU THAY ĐỔI"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:backgroundTint="#397485"
            app:cornerRadius="10dp"/>

        <Button
            android:id="@+id/btnHuySua"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Hủy bỏ"
            android:textColor="#555"
            android:backgroundTint="#E0E0E0"
            app:cornerRadius="10dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
</ScrollView>