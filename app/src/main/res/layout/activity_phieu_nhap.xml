<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".PhieuNhapActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarPhieuNhap"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#7986CB"
            app:title="Danh Sách Phiếu Nhập"
            app:titleTextColor="@android:color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <TextView
            android:id="@+id/txtTongPhieuNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:background="@android:color/white"
            android:layout_marginBottom="8dp"
            android:elevation="1dp"
            tools:text="Tổng: 0 phiếu nhập"/>

        <ListView
            android:id="@+id/lvPhieuNhap"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:paddingTop="4dp"
            android:clipToPadding="false"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabThemPhieuNhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="#FFB74D"
        app:rippleColor="#F44336"
        app:tint="@android:color/white"
        android:contentDescription="Thêm Phiếu Nhập"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>