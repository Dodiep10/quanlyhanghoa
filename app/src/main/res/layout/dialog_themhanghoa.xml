<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Thêm Hàng Hóa Mới"
            android:textColor="#3F51B5"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:text="Nhập thông tin chi tiết của sản phẩm"
            android:textColor="#666666"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imgHangHoa"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_border"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnChonAnh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#E0E0E0"
            android:text="Chọn ảnh sản phẩm"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/edtMaHangHoa"
            android:hint="Mã hàng hóa"
            android:background="@drawable/bg_input"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/edtTenHangHoa"
            android:hint="Tên hàng hóa"
            android:background="@drawable/bg_input"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại hàng hóa"
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"/>

        <Spinner
            android:id="@+id/spnLoaiHangHoa"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input"
            android:layout_marginBottom="10dp"
            android:spinnerMode="dropdown" />
        <EditText
            android:id="@+id/edtSoLuong"
            android:hint="Số lượng"
            android:inputType="number"
            android:background="@drawable/bg_input"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/edtGia"
            android:hint="Giá bán (VNĐ)"
            android:inputType="numberDecimal"
            android:background="@drawable/bg_input"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/edtTenNCC"
            android:hint="Tên nhà cung cấp"
            android:background="@drawable/bg_input"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/edtEmailNCC"
            android:hint="Email nhà cung cấp"
            android:inputType="textEmailAddress"
            android:background="@drawable/bg_input"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/edtSdtNCC"
            android:hint="Số điện thoại NCC"
            android:inputType="phone"
            android:background="@drawable/bg_input"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnHuy"
                android:text="Huỷ"
                android:backgroundTint="#E0E0E0"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnXacNhan"
                android:text="Xác nhận"
                android:textColor="#FFFFFF"
                android:layout_marginStart="12dp"
                android:backgroundTint="#4C9B50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>