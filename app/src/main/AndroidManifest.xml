<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="quanlyhanghoa"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SửaHàngHóa">
        <activity android:name=".themhanghoa" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- *** THÊM CHỈNH SỬA - NA *** -->
        <!-- Khai báo Activity Chi Tiết Hàng Hóa và sửa hàng hoá -->
        <activity
            android:name=".ChiTietHangHoaActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".SuaHangHoaActivity"
            android:exported="false"
            android:label="Sửa Hàng Hóa"
            android:parentActivityName=".ChiTietHangHoaActivity"/> <!-- Báo cho hệ thống biết "mũi tên back" sẽ quay về màn Chi Tiết -->
    </application>



</manifest>